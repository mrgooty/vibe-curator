# Frontend Environment Configuration for Vibe Curator

# API Configuration
API_BASE_URL=http://localhost:3000
GRAPHQL_ENDPOINT=http://localhost:3000/graphql

# Expo Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_GRAPHQL_URL=http://localhost:3000/graphql

# Development Configuration
NODE_ENV=development
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
REACT_NATIVE_PACKAGER_HOSTNAME=localhost

# Feature Flags
EXPO_PUBLIC_FEATURE_REAL_TIME_ANALYSIS=false
EXPO_PUBLIC_FEATURE_BATCH_PROCESSING=true
EXPO_PUBLIC_FEATURE_EXPORT_DATA=true
EXPO_PUBLIC_FEATURE_ADVANCED_ANALYTICS=false
EXPO_PUBLIC_FEATURE_NOTIFICATIONS=true

# Analytics and Tracking (optional)
# EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id_here
# EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# App Configuration
EXPO_PUBLIC_APP_NAME=Vibe Curator
EXPO_PUBLIC_APP_VERSION=1.0.0

# Theme Configuration
EXPO_PUBLIC_DEFAULT_THEME=light