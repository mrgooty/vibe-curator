# Root Environment Configuration for Vibe Curator Docker Compose

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Apify Configuration
APIFY_API_TOKEN=apify_api_your_token_here

# Environment
NODE_ENV=development

# Backend Configuration
BACKEND_PORT=3000
CORS_ORIGIN=http://localhost:19006

# Frontend Configuration
FRONTEND_WEB_PORT=19006
FRONTEND_EXPO_PORT=19000

# Docker Configuration
COMPOSE_PROJECT_NAME=vibe-curator

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/vibe_curator
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info

# Feature Flags
FEATURE_REAL_TIME_ANALYSIS=false
FEATURE_BATCH_PROCESSING=true
FEATURE_EXPORT_DATA=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_NOTIFICATIONS=true